/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  border-style: solid;
  border-width: thin;
  border-color: #585858;
}

.userinfo-nickname {
  color: #585858;
}

.conversation {
  height: 380px;
  width: auto;
  margin: 10rpx;
  background-color: whitesmoke;
  border-radius: 1%;
  border-style: solid;
  border-width: thin;
  border-color: lightgray;
  color: #013220;
  font-size: large;
  padding: 5px;
}

.textpanel {
  margin: 10rpx;
  background-color: whitesmoke;
  border-radius: 3%;
  border-style: solid;
  border-width: thin;
  border-color: lightgray;
  color: whitesmoke;
  padding: 15px;
}
.textbox {
  color: black;
  font-size: medium;
  background-color: white;
  border-radius: 3%;
  border-style: solid;
  border-width: thin;
  border-color: lightgray;
  padding: 10px;
}
.button {
  margin-top: 20rpx;
  font-weight: bold;
  color: white;
  background-color: #03c44b
}
.button-hover {
  background-color: white;
  color: #03c44b;
  border-style: solid;
  border-width: thin;
  border-color: lightgray;
}